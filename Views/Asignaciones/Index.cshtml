@model IEnumerable<Gestor_Proyectos_Academicos.Models.ProyectosEstudiantes>

@{
    ViewData["Title"] = "Asignaciones";
}

<link rel="stylesheet" href="~/css/AsignacionesCRUD.css" />

<div class="section-header">
    <h2 class="section-title">Asignaciones</h2>

    <a asp-action="Create" class="btn-create">Nueva asignación</a>
</div>

<div class="card-table-container">
    <table class="modern-table">
        <thead>
            <tr>
                <th>Proyecto</th>
                <th>Estudiante</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Proyecto?.Nombre</td>
                    <td>@item.Estudiante?.Nombre</td>
                    <td class="actions-cell">

                        <a asp-action="Edit"
                           asp-route-idProyecto="@item.IdProyecto"
                           asp-route-idEstudiante="@item.IdEstudiante"
                           class="action-btn edit">
                            Editar
                        </a>

                        <a asp-action="Details"
                           asp-route-idProyecto="@item.IdProyecto"
                           asp-route-idEstudiante="@item.IdEstudiante"
                           class="action-btn info">
                            Detalles
                        </a>

                        <a asp-action="Delete"
                           asp-route-idProyecto="@item.IdProyecto"
                           asp-route-idEstudiante="@item.IdEstudiante"
                           class="action-btn delete">
                            Eliminar
                        </a>

                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
