@model IEnumerable<Gestor_Proyectos_Academicos.Models.ProyectosEstudiantes>

@{
    ViewData["Title"] = "Asignaciones";
}

<h2>Asignación de estudiantes a proyectos</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Nueva asignación</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Proyecto</th>
            <th>Estudiante</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Proyecto?.Nombre (@item.IdProyecto)</td>
                <td>@item.Estudiante?.Nombre (@item.IdEstudiante)</td>
                <td>
                    <a asp-action="Details"
                       asp-route-idProyecto="@item.IdProyecto"
                       asp-route-idEstudiante="@item.IdEstudiante">Detalles</a> |

                    <a asp-action="Edit"
                       asp-route-idProyecto="@item.IdProyecto"
                       asp-route-idEstudiante="@item.IdEstudiante">Editar</a> |

                    <a asp-action="Delete"
                       asp-route-idProyecto="@item.IdProyecto"
                       asp-route-idEstudiante="@item.IdEstudiante">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
