@model Gestor_Proyectos_Academicos.Models.ProyectosEstudiantes

@{
    ViewData["Title"] = "Editar Asignación";
}

<h2>Editar asignación</h2>

<form asp-action="Edit" method="post">
    <!-- Claves originales ocultas -->
    <input type="hidden" name="idProyectoOriginal" value="@Model.IdProyecto" />
    <input type="hidden" name="idEstudianteOriginal" value="@Model.IdEstudiante" />

    <div class="form-group">
        <label for="IdProyecto">Proyecto</label>
        <select asp-for="IdProyecto" class="form-control"
                asp-items="ViewBag.IdProyecto"></select>
    </div>

    <div class="form-group">
        <label for="IdEstudiante">Estudiante</label>
        <select asp-for="IdEstudiante" class="form-control"
                asp-items="ViewBag.IdEstudiante"></select>
    </div>

    <br />

    <button type="submit" class="btn btn-primary">Guardar cambios</button>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</form>
