@model Gestor_Proyectos_Academicos.Models.ProyectosEstudiantes

@{
    ViewData["Title"] = "Editar Asignación";
}

<link rel="stylesheet" href="~/css/AsignacionesCRUD.css" />

<div class="form-card">

    <h2 class="form-title">Editar Asignación</h2>

    <form asp-action="Edit">

        <input type="hidden" name="idProyectoOriginal" value="@Model.IdProyecto" />
        <input type="hidden" name="idEstudianteOriginal" value="@Model.IdEstudiante" />

        <div class="form-group">
            <label asp-for="IdProyecto">Proyecto</label>
            <select asp-for="IdProyecto" class="form-input" asp-items="ViewBag.Proyectos"></select>
        </div>

        <div class="form-group">
            <label asp-for="IdEstudiante">Estudiante</label>
            <select asp-for="IdEstudiante" class="form-input" asp-items="ViewBag.Estudiantes"></select>
        </div>

        <button type="submit" class="btn-guardar">Guardar cambios</button>
        <a asp-action="Index" class="btn-cancel">Volver</a>

    </form>
</div>
