@model Gestor_Proyectos_Academicos.Models.ProyectosEstudiantes

@{
    ViewData["Title"] = "Eliminar Asignación";
}

<h2>Eliminar asignación</h2>

<h3>¿Seguro que querés eliminar esta asignación?</h3>

<dl class="row">
    <dt class="col-sm-2">Proyecto</dt>
    <dd class="col-sm-10">
        @Model.Proyecto?.Nombre (@Model.IdProyecto)
    </dd>

    <dt class="col-sm-2">Estudiante</dt>
    <dd class="col-sm-10">
        @Model.Estudiante?.Nombre (@Model.IdEstudiante)
    </dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="IdProyecto" />
    <input type="hidden" asp-for="IdEstudiante" />

    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</form>
