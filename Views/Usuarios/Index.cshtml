@model IEnumerable<Gestor_Proyectos_Academicos.Models.Usuario>

@{
    ViewData["Title"] = "Usuarios";
}

<link rel="stylesheet" href="~/css/UsuariosCRUD.css" />

<div class="section-header">
    <h2 class="section-title">Usuarios</h2>

    <a asp-action="Create" class="btn-create">Crear nuevo usuario</a>
</div>

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success">@TempData["Mensaje"]</div>
}

<div class="card-table-container">
    <table class="modern-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Correo</th>
                <th>Rol</th>
                <th>Acciones</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var u in Model)
            {
                <tr>
                    <td>@u.IdUsuario</td>
                    <td>@u.Nombre</td>
                    <td>@u.Correo</td>
                    <td>@u.Rol?.NombreRol</td>

                    <td class="actions-cell">
                        <a asp-action="Details" asp-route-id="@u.IdUsuario" class="action-btn info">Detalles</a>
                        <a asp-action="Edit" asp-route-id="@u.IdUsuario" class="action-btn edit">Editar</a>
                        <a asp-action="Delete" asp-route-id="@u.IdUsuario" class="action-btn delete">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
