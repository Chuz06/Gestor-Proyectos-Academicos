@model Gestor_Proyectos_Academicos.Models.Usuario

<link rel="stylesheet" href="~/css/UsuariosCRUD.css" />

<div class="delete-card">
    <h2 class="form-title">Eliminar Usuario</h2>

    <p>¿Está seguro que desea eliminar al usuario <strong>@Model.Nombre</strong>?</p>

    <dl>
        <dt>Correo</dt>
        <dd>@Model.Correo</dd>

        <dt>Rol</dt>
        <dd>@Model.Rol?.NombreRol</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="IdUsuario" />

        <button type="submit" class="btn-delete-big">Eliminar</button>
        <a asp-action="Index" class="btn-cancel">Cancelar</a>
    </form>
</div>
