@model Gestor_Proyectos_Academicos.Models.Usuario

@{
    ViewData["Title"] = "Detalles del usuario";
}

<h2>Detalles del usuario</h2>

<dl class="row">
    <dt class="col-sm-2">ID</dt>
    <dd class="col-sm-10">@Model.IdUsuario</dd>

    <dt class="col-sm-2">Nombre</dt>
    <dd class="col-sm-10">@Model.Nombre</dd>

    <dt class="col-sm-2">Correo</dt>
    <dd class="col-sm-10">@Model.Correo</dd>

    <dt class="col-sm-2">Rol</dt>
    <dd class="col-sm-10">@Model.Rol?.NombreRol</dd>
</dl>

<p>
    <a asp-action="Edit" asp-route-id="@Model.IdUsuario" class="btn btn-primary">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</p>
