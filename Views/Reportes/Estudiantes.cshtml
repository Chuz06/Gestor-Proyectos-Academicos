@model IEnumerable<Gestor_Proyectos_Academicos.Models.ReporteEstudianteView>

@{
    ViewData["Title"] = "Reporte por Estudiantes";
}

<h2 class="mt-3">Reporte por Estudiantes</h2>
<hr />

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Estudiante</th>
            <th>Proyecto</th>
            <th>Total Tareas</th>
            <th>Tareas Completadas</th>
            <th>Avance</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var e in Model)
        {
            <tr>
                <td>@e.Estudiante</td>
                <td>@e.Proyecto</td>
                <td>@e.TotalTareas</td>
                <td>@e.TareasCompletadas</td>
                <td>@e.PorcentajeAvance.ToString("0.##") %</td>
            </tr>
        }
    </tbody>
</table>
