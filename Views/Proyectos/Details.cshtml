@model Gestor_Proyectos_Academicos.Models.Proyecto

@{
    ViewData["Title"] = "Detalles del proyecto";
}

<h2>Detalles del proyecto</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Id</dt>
        <dd class="col-sm-10">@Model.IdProyecto</dd>

        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.Nombre</dd>

        <dt class="col-sm-2">Descripción</dt>
        <dd class="col-sm-10">@Model.Descripcion</dd>

        <dt class="col-sm-2">Fecha inicio</dt>
        <dd class="col-sm-10">@Model.FechaInicio.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-2">Fecha fin</dt>
        <dd class="col-sm-10">@Model.FechaFin?.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-2">Id Profesor</dt>
        <dd class="col-sm-10">@Model.IdProfesor</dd>
    </dl>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.IdProyecto" class="btn btn-primary">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</p>
