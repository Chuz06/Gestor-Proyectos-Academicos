@model Gestor_Proyectos_Academicos.Models.Proyecto

@{
    ViewData["Title"] = "Crear proyecto";
    bool esAdmin = User.IsInRole("Administrador");
}

<link rel="stylesheet" href="~/css/ProyectosCRUD.css" />

<h2 class="section-title">Crear proyecto</h2>

<div class="form-card">

    <form asp-action="Create" method="post">

        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Nombre"></label>
            <input asp-for="Nombre" class="form-input" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Descripcion"></label>
            <textarea asp-for="Descripcion" class="form-input"></textarea>
        </div>

        <div class="form-row">
            <div class="form-group" style="width: 50%;">
                <label asp-for="FechaInicio"></label>
                <input asp-for="FechaInicio" type="date" class="form-input" />
            </div>

            <div class="form-group" style="width: 50%;">
                <label asp-for="FechaFin"></label>
                <input asp-for="FechaFin" type="date" class="form-input" />
            </div>
        </div>

        @if (esAdmin)
        {
            <div class="form-group">
                <label>Profesor asignado</label>
                <select asp-for="IdProfesor" asp-items="ViewBag.Profesores" class="form-input">
                    <option value="0">-- Seleccionar profesor --</option>
                </select>
                <span asp-validation-for="IdProfesor" class="text-danger"></span>
            </div>
        }
        else
        {
            <input type="hidden" asp-for="IdProfesor" />
        }

        <button type="submit" class="btn-guardar">Guardar</button>
        <a asp-action="Index" class="btn-cancel">Cancelar</a>

    </form>

</div>
