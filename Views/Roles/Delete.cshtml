@model Gestor_Proyectos_Academicos.Models.Rol

@{
    ViewData["Title"] = "Eliminar Rol";
}

<link rel="stylesheet" href="~/css/RolesCRUD.css" />

<div class="delete-card">
    <h2 class="form-title">Eliminar Rol</h2>

    <p>¿Seguro que desea eliminar el rol <strong>@Model.NombreRol</strong>?</p>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="IdRol" />

        <button type="submit" class="btn-delete-big">Eliminar</button>
        <a asp-action="Index" class="btn-cancel">Cancelar</a>
    </form>
</div>
