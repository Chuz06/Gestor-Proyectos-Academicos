@model Gestor_Proyectos_Academicos.Models.Tarea

@{
    ViewData["Title"] = "Crear tarea";
}

<h2>Crear tarea</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Titulo" class="control-label"></label>
        <input asp-for="Titulo" class="form-control" />
        <span asp-validation-for="Titulo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Descripcion" class="control-label"></label>
        <textarea asp-for="Descripcion" class="form-control"></textarea>
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FechaLimite" class="control-label"></label>
        <input asp-for="FechaLimite" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Estado" class="control-label"></label>
        <input asp-for="Estado" class="form-control" />
        <small class="form-text text-muted">Ej: Pendiente, En Progreso, Completada</small>
    </div>

    <div class="form-group">
        <label asp-for="IdProyecto" class="control-label"></label>
        <select asp-for="IdProyecto" asp-items="ViewBag.Proyectos" class="form-control">
            <option value="">-- Seleccione un proyecto --</option>
        </select>
        <span asp-validation-for="IdProyecto" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IdAsignadoA" class="control-label"></label>
        <select asp-for="IdAsignadoA" asp-items="ViewBag.Estudiantes" class="form-control">
            <option value="">-- Seleccione un estudiante --</option>
        </select>
        <span asp-validation-for="IdAsignadoA" class="text-danger"></span>
    </div>


    <button type="submit" class="btn btn-success mt-2">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary mt-2">Volver</a>
</form>
