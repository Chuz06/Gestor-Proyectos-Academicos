@model Gestor_Proyectos_Academicos.Models.Tarea

@{
    ViewData["Title"] = "Detalles de la tarea";
}

<h2>Detalles de la tarea</h2>

<dl class="row">
    <dt class="col-sm-2">Id</dt>
    <dd class="col-sm-10">@Model.IdTarea</dd>

    <dt class="col-sm-2">Título</dt>
    <dd class="col-sm-10">@Model.Titulo</dd>

    <dt class="col-sm-2">Descripción</dt>
    <dd class="col-sm-10">@Model.Descripcion</dd>

    <dt class="col-sm-2">Fecha límite</dt>
    <dd class="col-sm-10">@Model.FechaLimite?.ToString("yyyy-MM-dd")</dd>

    <dt class="col-sm-2">Estado</dt>
    <dd class="col-sm-10">@Model.Estado</dd>

    <dt class="col-sm-2">Id Proyecto</dt>
    <dd class="col-sm-10">@Model.IdProyecto</dd>

    <dt class="col-sm-2">Id Asignado A</dt>
    <dd class="col-sm-10">@Model.IdAsignadoA</dd>
</dl>

<p>
    <a asp-action="Edit" asp-route-id="@Model.IdTarea" class="btn btn-primary">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</p>
